[border]
command=echo " "
interval=once

[time]
command=date +%H:%M
interval=1

[margin]
command=echo "                                                                                                                                         "
interval=once

[weather]
command=curl -Ss 'https://wttr.in?0&T&Q' | cut -c 16- | head -2 | xargs echo
interval=1800
color=#FFFFFF

